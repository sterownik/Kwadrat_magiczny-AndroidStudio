<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wojtek.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sudoku_jhg"
        android:label="Kwadrat Magiczny"
        android:roundIcon="@mipmap/sudoku_jhg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Main3Activity"
            android:label="@string/title_activity_main3"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Main4Activity"
            android:label="@string/title_activity_main4"
            android:parentActivityName=".Main3Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.wojtek.myapplication.Main3Activity" />
        </activity>
    </application>

</manifest>